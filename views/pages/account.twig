				<a href="{{url('logout')}}">
					<i class="material-icons">power_settings_new</i>
				</a>
			</div>
			<div class="row">
				<div class="col m12">
					{% if errors is not empty  %}
						<div class="alert">
							{% for _error in errors %}
								<div>{{_error}}</div>
							{% endfor %}
						</div>
					{% endif %}
					{% if success is not empty  %}
						<div class="succes">
							{% for _success in success %}
								<div>{{_success}}</div>
							{% endfor %}
						</div>
					{% endif %}
				</div>
		</div>
			<div class="row">
				<div class="col m4">
					<div class="container-profile-picture">
